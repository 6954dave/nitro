ROOT = $(PWD)

all: libs tests

.PHONY: nitf

libs:
	cd except; make library
	cd str;    make library
	cd sys;    make library
	cd mt;     make library
	perl $(ROOT)/linkLibs.pl @target@/@lib_dir@ except str sys mt
	cd nitf;   make library

install_compat_headers:
	mkdir -p @prefix@;
	tar -cf compat_headers.tar include/;
	mv compat_headers.tar @prefix@/;
	cd @prefix@; tar -xvf compat_headers.tar; \rm -f compat_headers.tar

install: install_compat_headers
	cd except; make install
	cd str;    make install
	cd sys;    make install
	cd mt;     make install
	cd nitf;   make install

clean:
	cd except; make clean
	cd str;    make clean
	cd sys;    make clean
	cd mt;     make clean
	cd nitf;   make clean

raw:
	rm -f Makefile
	rm -f config.status
	rm -rf install
	cd except; make raw
	cd str;    make raw
	cd sys;    make raw
	cd mt;     make raw
	cd nitf;   make raw

tests:
	cd except; make unit-tests
	cd str;    make unit-tests
	cd sys;    make unit-tests
	cd mt;     make unit-tests
	cd nitf;   make unit-tests


fresh: clean
	make
